<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Définition d'un servlet -->
    <servlet>
        <servlet-name>sprint</servlet-name>
        <servlet-class>mg.itu.prom16.controller.FrontControllerServlet</servlet-class>
    </servlet>

    <!-- Mappage du servlet à un URL -->
    <servlet-mapping>
        <servlet-name>sprint</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- Définition d'un context-param pour le package des contrôleurs -->
    <context-param>
        <param-name>controllerPackage</param-name>
        <param-value>controller</param-value>
    </context-param>
    
</web-app>
